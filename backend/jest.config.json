{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!@faker-js/faker)"
  ],
  "collectCoverageFrom": [
    "**/*.{(guard|strategy|service|filter|pipe|provider|interceptor),}.(t|j)s",
    "!**/*-queries.service.(t|j)s",
    "!**/*-scheduler.service.(t|j)s"
  ],
  "testTimeout": 30000,
  "coverageDirectory": "../coverage/units",
  "testEnvironment": "node"
}