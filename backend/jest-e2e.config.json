{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!@faker-js/faker)"
  ],
  "collectCoverageFrom": [
    "**/*.controller.(t|j)s"
  ],
  "testTimeout": 30000,
  "coverageDirectory": "../coverage/e2e",
  "testEnvironment": "node"
}
